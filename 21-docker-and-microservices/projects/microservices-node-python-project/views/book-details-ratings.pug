extends layout.pug

include utils.pug

block content
  +alert('return to all book-list:', '/')
  p

  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col') Id
        th(scope='col') Title
        th(scope='col') Author
        th(scope='col') Release Date
        th(scope='col') Page Count
        th(scope='col') Publisher
        th(scope='col') Rating
        th(scope='col')
    tbody     
      tr
        td= book.id
        td= book.title
        td= book.author
        //td= new Date(book.releaseDate).toLocaleDateString('en-US', { timeZone: 'UTC' })
        td= book.releaseDate
        td= book.pageCount
        td= book.publisher
        td= ratings.average
        td
          a(class='btn btn-primary' href=`/book/${book.id}/rate` role='button') Rate
         
  h3= "All ratings of the book:"
  table(class='table table-striped table-hover')
    thead(class='thead-light')
      tr
        th(scope='col') Value
    tbody
      each rating in ratings.ratings     
        tr
          td= rating.value
  
